{
    "compilerOptions": {
      "target": "esnext",
      "outDir": "dist",
      "moduleResolution": "node",
      "allowJs": true,
      "checkJs": true,
      "types": ["node"],
      "strict": true,
      "resolveJsonModule": true,
      "noEmitOnError": true,
      "declaration": true,
      "declarationDir": "./types",
      "allowSyntheticDefaultImports": true
    },
    "include": ["lib/**/*", "./types.d.ts"]
}